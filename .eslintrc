ecmaFeatures:
  ecmascript: 6

env:
  browser: true
  node: true

globals:
  jQuery: true
  $: true
  Backbone: true
  _: true

rules:
  // best practices
  no-cond-assign: 0, // regex matching is easier with statements in loop contitions
  no-comma-dangle: 0
  no-console: 0
  no-extra-parens: 2

  // Best practices
  block-scoped-var: 2
  eqeqeq: [2, smart]
  no-floating-decimal: 2
  wrap-iife: [2, inside]
  curly: 2

  // Variables


  // Node.js
  no-mixed-requires: 0
  no-path-concat: 0

  // Stylistic issues
  brace-style: 2
  camelcase: 0
  new-cap: 0
  no-lonely-if: 2
  no-underscore-dangle: 0
  space-after-keywords: 2
  space-in-brackets: [2, never]
  space-infix-ops: 2
  quotes: [2, single]

  // Outstanding issues
  no-unused-vars: 0
  no-else-return: 0
  no-extend-native: 0
  valid-typeof: 0
  brace-style: 0
  no-multi-spaces: 0
  space-infix-ops: 0
  no-return-assign: 0
  comma-spacing: 0
  eol-last: 0
  key-spacing: 0
  no-extra-parens: 0
  space-unary-ops: 0
  no-unused-expressions: 0
  no-sequences: 0
  dot-notation: 0
  consistent-return: 0
  no-redeclare: 0
  no-lonely-if: 0
